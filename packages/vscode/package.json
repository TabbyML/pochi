{
  "name": "pochi",
  "version": "0.11.0-dev",
  "description": "Pochi is your AI powered team mate. Now available in research preview.",
  "displayName": "Pochi (Research Preview)",
  "publisher": "TabbyML",
  "homepage": "https://www.getpochi.com/",
  "license": "SEE LICENSE IN LICENSE.txt",
  "categories": [
    "Chat",
    "AI",
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "pochi",
    "ai",
    "llm",
    "chat",
    "copilot",
    "assistant",
    "agent",
    "claude"
  ],
  "icon": "assets/icons/logo128.png",
  "main": "./dist/extension.js",
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "authentication": [
      {
        "label": "Pochi",
        "id": "pochi"
      }
    ],
    "views": {
      "pochi": [
        {
          "id": "pochiSidebar",
          "type": "webview",
          "name": "Pochi"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pochi",
          "title": "Pochi",
          "icon": "$(code)"
        }
      ]
    },
    "commands": [
      {
        "command": "pochi.openLoginPage",
        "title": "Open Login Page",
        "category": "Pochi"
      },
      {
        "command": "pochi.logout",
        "title": "Logout",
        "category": "Pochi"
      },
      {
        "command": "pochi.loginWithToken",
        "title": "Login with Token",
        "category": "Pochi"
      },
      {
        "command": "pochi.editWorkspaceRules",
        "title": "Edit Workspace Rules",
        "category": "Pochi"
      },
      {
        "command": "pochi.webui.navigate.taskList",
        "title": "Show All Tasks",
        "icon": "$(code)",
        "category": "Pochi"
      },
      {
        "command": "pochi.webui.navigate.settings",
        "title": "Settings",
        "icon": "$(gear)",
        "category": "Pochi"
      },
      {
        "command": "pochi.openSettings",
        "title": "Open Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.addServer",
        "title": "Add MCP Server",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.openServerSettings",
        "title": "Open MCP Server Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.serverControl",
        "title": "MCP Server Control",
        "category": "Pochi"
      },
      {
        "command": "pochi.mcp.toggleToolEnabled",
        "title": "Toggle MCP Tool Enabled",
        "category": "Pochi"
      },
      {
        "command": "pochi.openFileFromDiff",
        "title": "Open File",
        "category": "Pochi",
        "icon": "$(go-to-file)"
      },
      {
        "command": "pochi.openCustomModelSettings",
        "title": "Open Custom Model Settings",
        "category": "Pochi"
      },
      {
        "command": "pochi.createTaskInPanel",
        "title": "New Task in Pochi",
        "category": "Pochi",
        "icon": "$(window)"
      },
      {
        "command": "pochi.createTaskOnWorktree",
        "title": "New Task on Worktree",
        "category": "Pochi",
        "icon": "$(git-branch)"
      }
    ],
    "menus": {
      "scm/sourceControl": [
        {
          "command": "pochi.createTaskInPanel",
          "group": "worktree@999",
          "when": "scmProviderContext == worktree"
        }
      ],
      "editor/title": [
        {
          "command": "pochi.openFileFromDiff",
          "when": "resourceScheme == 'pochi-diff-changes'",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "pochi.openLoginPage",
          "when": "false"
        },
        {
          "command": "pochi.logout",
          "title": "Pochi: Logout"
        },
        {
          "command": "pochi.loginWithToken",
          "title": "Pochi: Login with Token"
        },
        {
          "command": "pochi.webui.navigate.taskList",
          "when": "false"
        },
        {
          "command": "pochi.webui.navigate.settings",
          "when": "false"
        },
        {
          "command": "pochi.mcp.serverControl",
          "when": "false"
        },
        {
          "command": "pochi.mcp.toggleToolEnabled",
          "when": "false"
        },
        {
          "command": "pochi.createTaskOnWorktree",
          "when": "false"
        },
        {
          "command": "pochi.createTaskInPanel",
          "when": "false"
        },
        {
          "command": "pochi.editWorkspaceRules",
          "when": "false"
        },
        {
          "command": "pochi.mcp.addServer",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "pochi.webui.navigate.taskList",
          "when": "view == pochiSidebar",
          "group": "navigation@1"
        },
        {
          "command": "pochi.webui.navigate.settings",
          "when": "view == pochiSidebar",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "pochi.toggleFocus",
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "pochi.nextEditSuggestion.accept",
        "key": "tab",
        "when": "editorTextFocus && pochiNextEditSuggestionVisible"
      },
      {
        "command": "pochi.nextEditSuggestion.reject",
        "key": "escape",
        "when": "editorTextFocus && pochiNextEditSuggestionVisible"
      }
    ],
    "configuration": [
      {
        "title": "Pochi",
        "properties": {
          "pochi.advanced": {
            "order": 2,
            "default": {},
            "additionalProperties": false,
            "properties": {
              "inlineCompletion": {
                "default": {},
                "additionalProperties": false,
                "properties": {
                  "disabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable inline completion feature in Pochi."
                  },
                  "disabledLanguages": {
                    "type": "array",
                    "default": [],
                    "items": {
                      "type": "string"
                    },
                    "description": "List of languages where inline completion is disabled."
                  },
                  "provider": {
                    "type": "object",
                    "default": {
                      "type": "pochi"
                    },
                    "description": "The inline completion provider to use.",
                    "oneOf": [
                      {
                        "additionalProperties": false,
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "pochi"
                          }
                        }
                      },
                      {
                        "additionalProperties": false,
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "openai"
                          },
                          "baseURL": {
                            "type": "string",
                            "default": "",
                            "description": "The base URL for OpenAI API requests."
                          },
                          "apiKey": {
                            "type": "string",
                            "default": "",
                            "description": "The API key for OpenAI API requests. If not set, will use the POCHI_CODE_COMPLETION_OPENAI_API_KEY environment variable."
                          },
                          "model": {
                            "type": "string",
                            "default": "",
                            "description": "The OpenAI model to use for inline completion."
                          },
                          "promptTemplate": {
                            "type": "string",
                            "default": "",
                            "description": "The prompt template to use for inline completion. If not set, will use the default template."
                          }
                        }
                      },
                      {
                        "additionalProperties": false,
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "google-vertex-tuning"
                          },
                          "vertex": {
                            "type": "object",
                            "description": "Google Vertex AI credentials.",
                            "oneOf": [
                              {
                                "title": "Service Account Key",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "service-account"
                                  },
                                  "serviceAccountKey": {
                                    "type": "string",
                                    "description": "The service account key JSON for authentication."
                                  },
                                  "location": {
                                    "type": "string",
                                    "description": "The Google Cloud location (e.g., 'us-central1')."
                                  }
                                },
                                "required": [
                                  "type",
                                  "serviceAccountKey",
                                  "location"
                                ]
                              },
                              {
                                "title": "Access Token",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "access-token"
                                  },
                                  "accessToken": {
                                    "type": "string",
                                    "description": "A short-lived access token for authentication."
                                  },
                                  "projectId": {
                                    "type": "string",
                                    "description": "The Google Cloud Project ID."
                                  },
                                  "location": {
                                    "type": "string",
                                    "description": "The Google Cloud location (e.g., 'us-central1')."
                                  }
                                },
                                "required": [
                                  "type",
                                  "accessToken",
                                  "projectId",
                                  "location"
                                ]
                              },
                              {
                                "title": "Model URL",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "model-url"
                                  },
                                  "issueUrl": {
                                    "type": "string"
                                  },
                                  "modelUrl": {
                                    "type": "string"
                                  },
                                  "timeout": {
                                    "type": "number"
                                  }
                                },
                                "required": [
                                  "type",
                                  "issueUrl",
                                  "modelUrl",
                                  "timeout"
                                ]
                              }
                            ]
                          },
                          "model": {
                            "type": "string",
                            "description": "The ID of the model to use."
                          },
                          "systemPrompt": {
                            "type": "string",
                            "description": "An optional system prompt for inline completion."
                          },
                          "promptTemplate": {
                            "type": "string",
                            "description": "A custom prompt template to use for inline completion."
                          }
                        },
                        "required": ["type", "vertex", "model"]
                      }
                    ]
                  }
                }
              },
              "nextEditSuggestion": {
                "default": {},
                "additionalProperties": false,
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable next edit suggestion."
                  },
                  "provider": {
                    "type": "object",
                    "default": {
                      "type": "pochi"
                    },
                    "description": "The next edit suggestion provider to use.",
                    "oneOf": [
                      {
                        "additionalProperties": false,
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "pochi"
                          }
                        }
                      },
                      {
                        "additionalProperties": false,
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "google-vertex-tuning"
                          },
                          "vertex": {
                            "type": "object",
                            "description": "Google Vertex AI credentials.",
                            "oneOf": [
                              {
                                "title": "Service Account Key",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "service-account"
                                  },
                                  "serviceAccountKey": {
                                    "type": "string",
                                    "description": "The service account key JSON for authentication."
                                  },
                                  "location": {
                                    "type": "string",
                                    "description": "The Google Cloud location (e.g., 'us-central1')."
                                  }
                                },
                                "required": [
                                  "type",
                                  "serviceAccountKey",
                                  "location"
                                ]
                              },
                              {
                                "title": "Access Token",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "access-token"
                                  },
                                  "accessToken": {
                                    "type": "string",
                                    "description": "A short-lived access token for authentication."
                                  },
                                  "projectId": {
                                    "type": "string",
                                    "description": "The Google Cloud Project ID."
                                  },
                                  "location": {
                                    "type": "string",
                                    "description": "The Google Cloud location (e.g., 'us-central1')."
                                  }
                                },
                                "required": [
                                  "type",
                                  "accessToken",
                                  "projectId",
                                  "location"
                                ]
                              },
                              {
                                "title": "Model URL",
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "const": "model-url"
                                  },
                                  "issueUrl": {
                                    "type": "string"
                                  },
                                  "modelUrl": {
                                    "type": "string"
                                  },
                                  "timeout": {
                                    "type": "number"
                                  }
                                },
                                "required": [
                                  "type",
                                  "issueUrl",
                                  "modelUrl",
                                  "timeout"
                                ]
                              }
                            ]
                          },
                          "model": {
                            "type": "string",
                            "description": "The ID of the model to use."
                          }
                        },
                        "required": ["type", "vertex", "model"]
                      }
                    ]
                  }
                }
              },
              "webviewLogLevel": {
                "type": "string",
                "default": "",
                "description": "Pochi webview UI log level"
              }
            }
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "private": true,
  "scripts": {
    "copy:webui": "rm -rf ./assets/webview-ui/dist && bun ./scripts/copy-webui-dist.js",
    "build:vscode": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node --minify",
    "build": "npm-run-all --parallel build:vscode copy:webui",
    "vscode:prepublish": "bun turbo build",
    "vscode:package": "vsce package --no-dependencies --allow-missing-repository",
    "vscode:publish": "vsce publish --no-dependencies --allow-missing-repository",
    "vscode:publish-prerelease": "vsce publish --no-dependencies --allow-missing-repository --pre-release",
    "ovsx:publish": "ovsx publish --no-dependencies --pat $OVSX_PAT",
    "ovsx:publish-prerelease": "ovsx publish --no-dependencies --pre-release --pat $OVSX_PAT",
    "publish": "bun run vscode:publish && bun run ovsx:publish",
    "publish-prerelease": "bun run vscode:publish-prerelease && bun run ovsx:publish-prerelease",
    "watch:webui": "cd ../vscode-webui && bun run start",
    "watch:vscode": "bun build ./src/extension.ts --outdir ./dist --external vscode --format cjs --target node --watch",
    "watch": "npm-run-all --parallel watch:vscode watch:webui",
    "start": "code --extensionDevelopmentPath=$PWD",
    "dev": "npm-run-all --parallel watch start",
    "tsc": "tsc --noEmit",
    "test": "xvfb-maybe vscode-test",
    "test:coverage": "xvfb-maybe vscode-test --coverage",
    "release": "bunx bumpp --tag=vscode@%s"
  },
  "dependencies": {
    "@ai-sdk/google-vertex": "catalog:",
    "@getpochi/common": "workspace:*",
    "@getpochi/vendor-claude-code": "workspace:*",
    "@getpochi/vendor-codex": "workspace:*",
    "@getpochi/vendor-gemini-cli": "workspace:*",
    "@getpochi/vendor-github-copilot": "workspace:*",
    "@getpochi/vendor-pochi": "workspace:*",
    "@getpochi/vendor-qwen-code": "workspace:*",
    "@orama/orama": "^3.1.11",
    "@preact/signals-core": "catalog:",
    "@quilted/threads": "catalog:",
    "@vscode-logging/logger": "^2.0.0",
    "ai": "catalog:",
    "canvaskit-wasm": "^0.40.0",
    "diff": "^7.0.0",
    "fast-deep-equal": "^3.1.3",
    "fast-levenshtein": "^3.0.0",
    "iterator-helpers-polyfill": "^3.0.1",
    "jsonc-parser": "catalog:",
    "jszip": "^3.10.1",
    "linkify-it": "^5.0.0",
    "lru-cache": "^11.1.0",
    "object-hash": "^3.0.0",
    "posthog-node": "^4.17.2",
    "project-name-generator": "^2.1.9",
    "reflect-metadata": "^0.2.2",
    "remeda": "catalog:",
    "run-exclusive": "catalog:",
    "simple-git": "^3.28.0",
    "stats-logscale": "^1.0.9",
    "tsyringe": "^4.10.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ai-sdk/provider": "catalog:",
    "@getpochi/tools": "workspace:*",
    "@types/diff": "^7.0.2",
    "@types/object-hash": "^3.0.6",
    "@types/project-name-generator": "^2.1.3",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.82.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.3.2",
    "esbuild-register": "^3.6.0",
    "node-pty": "^1.0.0",
    "ovsx": "^0.10.2",
    "proxyquire": "^2.1.3",
    "semver": "^7.7.1",
    "sinon": "^20.0.0",
    "tsconfig-paths": "^4.2.0",
    "vscode-textmate": "^9.2.1",
    "xvfb-maybe": "^0.2.1"
  },
  "vsce": {
    "dependencies": false
  }
}
