// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run dev:server",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "dev:server"
    },
    {
      "name": "Run VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode"],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "dev:vscode"
    },
    {
      "name": "Run VSCode Extension (Local Server)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode"],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "dev:vscode-local",
      "env": {
        "POCHI_LOCAL_SERVER": "true"
      }
    },
    {
      "name": "Run VSCode Extension (Local Sync)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode"],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "dev:vscode-local-sync",
      "env": {
        "POCHI_LOCAL_SYNC_SERVER": "true"
      }
    },
    {
      "name": "Run VSCode Extension (Local Sync and Local Server)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode"],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "dev:vscode-local-sync-local-server",
      "env": {
        "POCHI_LOCAL_SYNC_SERVER": "true",
        "POCHI_LOCAL_SERVER": "true"
      }
    },
    {
      "name": "Run VSCode Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "testConfiguration": "${workspaceFolder}/packages/vscode/.vscode-test.mjs",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode"]
    }
  ]
}
